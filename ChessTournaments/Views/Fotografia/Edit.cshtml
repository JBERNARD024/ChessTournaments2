            </div>
            <div class="form-group">
                <label asp-for="PessoaFK" class="control-label"></label>
                <select asp-for="PessoaFK" class="form-control" asp-items="ViewBag.PessoaFK"></select>
                <span asp-validation-for="PessoaFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EquipaFK" class="control-label"></label>
